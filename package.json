{
  "name": "ipc-builder",
  "version": "2.0.0",
  "description": "WBS Terminal v2.0 - Work Breakdown Structure Generator",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:analyze": "vite build --mode analyze",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .js --ignore-pattern 'src/legacy/*'",
    "lint:fix": "eslint src --ext .js --fix --ignore-pattern 'src/legacy/*'",
    "format": "prettier --write \"src/**/*.{js,css,html}\" --ignore-path .prettierignore",
    "check": "npm run lint && npm run build"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "html2pdf.js": "^0.10.1",
    "pdfjs-dist": "^3.11.174",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "eslint": "^8.57.1",
    "postcss": "^8.4.32",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^5.11.0",
    "terser": "^5.26.0",
    "vite": "^5.0.10"
  },
  "keywords": [
    "wbs",
    "project-management",
    "engineering",
    "infrastructure"
  ],
  "author": "mjamiv",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
